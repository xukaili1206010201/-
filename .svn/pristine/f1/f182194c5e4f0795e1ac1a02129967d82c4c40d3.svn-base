.followus-content{
  margin-top: 50px;
  padding-top: 5px;
  padding-bottom: 10px;
}

.wx{
  text-align: center;
  margin-top: 10px;
  margin-bottom: 20px;
  width: 100%;
}

.wxcode-block{
  width: 40%;
  margin-left: 30%;
}

.applecode-block , .androidcode-block{
  width: 80%;
  margin-left: 10%;
}

.wx p{
  font-size: 13px;
}

.app{
  overflow: hidden;
}

.app .apple , .app .android{
  width: 50%;
}

.apple{
  float: left;
}
.android{
  float:right;
}


.sharetofriends{
  margin-left: 10px;
  margin-right: 10px;
  padding-bottom: 10px;
  padding-top: 3px;
  background: white;
}


.share-block , .recommend-block{
  margin-top: 10px;
  margin-left: 10px;
  margin-right: 10px;
}

.share-block{
  height: 35px;
}

.share-block .btn{
  padding: 0px;
}

.share-block button{
  height: 100%;
}


.qrcode-type{
  margin-top:5px;
}
.recommend-block button{
  margin-top: 10px;
}



.recommend{
  margin-left: 10px;
  margin-right: 10px;
  margin-top: 10px;
  padding-top: 5px;
  padding-bottom: 10px;
  background: white;
}
