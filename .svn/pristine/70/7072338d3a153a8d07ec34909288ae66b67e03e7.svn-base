<div class="row">
    <div class="col-md-4 col-md-offset-4" style="padding: 10% 0">
        <form name="loginForm" ng-submit="login(credentials)" novalidate login>
            <div class="form-group">
                <label for="email">Email address</label>
                <input type="email" class="form-control" id="email" placeholder="Email" ng-model="credentials.username">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" placeholder="Password" ng-model="credentials.password">
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox"> Check me out
                </label>
            </div>
            <button type="submit" class="btn btn-default">Login</button>
        </form>
    </div>
</div>

