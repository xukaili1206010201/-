.familyservicelist-content {
  margin-top: 50px;
  width: 100%;
  background: #F0EFF6;
}

.familyservicelist-sellername-view {
  height: 3rem;
  padding: 0.5rem 1rem;
  background: white;
  vertical-align: middle;
}

.familyservicelist-sellername-text {
  height: 2rem;
  line-height: 2rem;
  font-weight: bold;
  font-size: 1.5rem;
}

.familyservicelist-next-image {
  width: 2rem;
  margin-top: 0;
  height: auto;
  float: right;
}

.familyservicelist-marquee {
  width: 100%;
  height: 3rem;
}

