.publicservice-nav{
  margin-bottom: 0;
}

.publicservice-segmentcontrol{
  width: 100%;
  height: 40px;
  padding:0px 10px;
  border-bottom: 1px solid #ddd;
}

.publicservice-segmentcontrol .publicservice-sc-item{
  float: left;
  width: 33%;
  height: 40px;
  line-height: 40px;
  display:inline-block;
  text-align: center;
  font-size:1.3rem;
}

.publicservice-segmentcontrol .publicservice-sc-item:focus{
  outline: none;
}

.publicservice-segmentcontrol .publicservice-default-selected-item{
  color: #7DB343;
  border-bottom:3px solid #7DB343;
}


.publicservice-street-table , .publicservice-manager-table{
  display: none;
}

.publicservice-street-row p{
  margin: 0;
}

.publicservice-street-phone{
  float: right;
}

/* 社区街道的地址以及电话 */
.publicservice-street-address , .publicservice-street-phone{
  font-size: 12px;
}

.publicservice-manager-row p{
  margin: 0;
}

.publicservice-manager-phone{
  float: right;
}
.publicservice-manager-communityname,.publicservice-street-name{
  font-size:1.5rem;
}
/* 小区名、小区地址、物业电话 */
.publicservice-manager-name , .publicservice-manager-address , .publicservice-manager-phone{
  font-size: 1.2rem;
}

