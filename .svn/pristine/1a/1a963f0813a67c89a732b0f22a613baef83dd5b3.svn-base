    $scope.from = $stateParams.from;
    if ($scope.from != '3' && $scope.from != '5' && $scope.from != '6' && $scope.from != '7') {
      sessionStorage.removeItem('loginValue');
    }

    $scope.jumpTo = function () {
      if (!$rootScope.regxMobile.test($scope.formData.mobile)) {
