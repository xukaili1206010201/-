//********************************* 初始化 ********************************
    $scope.formData = {};
    //默认上次登录的手机号码
    $scope.formData.mobile = parseInt(localStorage.lastMobile);
    //项目徽记
    $scope.logo = sessionStorage.logo;
    //项目名称
    $scope.projectName = sessionStorage.projectName;
//********************************** end **********************************

//********************************* 自定义函数 ******************************

//********************************** end **********************************

