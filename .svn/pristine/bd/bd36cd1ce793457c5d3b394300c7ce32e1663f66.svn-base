<script>

  $(function () {

    setTimeout(function () {


      $('.rating-container').css({
        'padding-left': '0px'
      })
      $('.clear-rating').css({
        'width': '0px'
      })

      var screenWidth = window.screen.width;
      var starW = $('.rating-container').width();
      var starH = $('.rating-container').height();

      $('.star-rating').css({
        'width': starW + 'px',
        'height': starH + 'px',
        'float': 'left'
      })


      $('.product-judge-goods-star-reset').css({
        'width': (screenWidth - starW) * 0.5 + 'px',
        'height': starH + 'px'
      })

      $('.product-judge-goods-star-fullscore').css({
        'width': (screenWidth - starW) * 0.5 + 'px',
        'height': starH + 'px'
      })

    }, 0);

  })


  function resetClick() {
    $('#star').rating("reset", {})
  }

  function fullStarClick() {
    $('.rating-stars').css({
      'width': '100%'
    });

  }


</script>
