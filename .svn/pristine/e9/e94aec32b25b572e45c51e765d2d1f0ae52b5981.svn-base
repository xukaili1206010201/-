/*城市*/
.stationCityName{
  font-size: 1.6rem;
  height:2.2rem;
  line-height: 2.2rem;
  background-color:#ddd;
  vertical-align: middle;
  padding-left:10px;
}
/*列表*/
.stationList .line-normal-wrapper{
  font-size: 1.3rem;
  margin-left: 10px;
  width:100%;
  position: relative;
}
.stationInfo{
  width:15%;
  height:2rem;
  font-size:1.6rem;
  position: absolute;
  top:0.8rem;
  right:0px;
  text-align: center;
  vertical-align: middle;
  color: #7DB343;
}
