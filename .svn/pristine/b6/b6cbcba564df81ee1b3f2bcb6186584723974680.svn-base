.publicservice-nav{
  margin-bottom: 0;
}

.publicservice-segmentcontrol{
  width: 100%;
  height: 40px;
  padding:0px 10px;
  border-bottom: 1px solid #ddd;
  display: -webkit-box; /* 老版本语法: Safari, iOS, Android browser, older WebKit browsers. */
  display: -moz-box; /* 老版本语法: Firefox (buggy) */
  display: -ms-flexbox; /* 混合版本语法: IE 10 */
  display: -webkit-flex; /* 新版本语法: Chrome 21+ */
  display: flex;
  -ms-justify-content: space-around;
  justify-content: space-around;
  -moz-justify-content: space-around;
  -webkit-justify-content: space-around;
  justify-content: space-around;
}

.publicservice-segmentcontrol .publicservice-sc-item{
  float: left;
  height: 40px;
  line-height: 40px;
  display:inline-block;
  text-align: center;
  font-size:1.3rem;
  border-bottom:3px solid transparent;
  color:#666;
}
.publicservice-segmentcontrol a:first-child{
  color: #7DB343;
  border-bottom:3px solid #7DB343;
}


.publicservice-segmentcontrol .publicservice-sc-item:focus{
  outline: none;
}
.publicservice-street-row p{
  margin: 0;
}

.publicservice-street-phone{
  float: right;
}

/* 社区街道的地址以及电话 */
.publicservice-street-address , .publicservice-street-phone{
  font-size: 12px;
}

.publicservice-manager-row p{
  margin: 0;
}

.publicservice-manager-phone{
  float: right;
}
.publicservice-manager-communityname,.publicservice-street-name{
  font-size:1.5rem;
}
/* 小区名、小区地址、物业电话 */
.publicservice-manager-name , .publicservice-manager-address , .publicservice-manager-phone{
  font-size: 1.2rem;
}

