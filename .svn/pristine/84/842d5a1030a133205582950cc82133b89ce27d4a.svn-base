.segement-control {
  width: 100%;
  height: 30px;
  top: 50px;
  background: white;
  overflow: hidden;
  border-bottom: 1px solid #dddddd;
}

.segement-control a {
  width: 25%;
  height: 100%;
  line-height: 30px;
  float: left;
  color: black;
  text-align: center;
}

.segement-control a:hover {
  text-decoration: none;
}

/*
*todo 做统一样式管理
*
*/
.segmentbutton {
  border: none;
  background-color: #FFFFFF;
}

.segement-control .unused-button {
  color: white;
  background-color: #85C820;
}

.coupons-content{
  margin-top: 80px;
}


.used-table, .outdate-table, .unreceive-table {
  display: none;
}

.goodsInfo {
  margin-top: 5px;
}

.coupons-name {
  font-size: 16px;
}

.coupons-type {
  text-align: right;
}

.fuwu_coupons{
  float:left;
}

.coupons-time {
  text-align: right;
}
.coupons-content .list-group .coupons-row{
  padding: 0px 10px 0px 10px;
}
.unreceive-table .list-group,.outdate-table .list-group,.used-table .list-group,.unused-table .list-group{
  margin-bottom: 0;
}
.media-li{
  background: #ddd;
  padding-left: 5px;
  padding-top: 5px;
  padding-bottom: 5px;
  padding-right: 3px;
  margin-top: 5px;
}

.media-left img {
  width: 40px;
  height: 40px;
}

.goods-content-top {
  overflow: hidden;
}

.goods-name {
  float: left;
}

.goods-price {
  float: right;
}

.goods-content-bottom p {
  font-size: 13px;
}

