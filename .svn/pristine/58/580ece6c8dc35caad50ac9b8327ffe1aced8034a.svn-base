/* ******************************** 商家 begin ******************************** */
.seller-name-block {
  margin-top: 0px;
  background: white;
  width: 100%;
  height: 40px;
  overflow: hidden;
}

.seller-name-block img {
  float: right;
  width: 20px;
  height: 20px;
  margin-top: 10px;
  margin-right: 10px;
}

.seller-name-block p {
  float: left;
  height: 40px;
  line-height: 40px;
  font-size: 14px;
  margin: 0px;
  margin-left: 10px;
  width: 85%;

  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

/* ******************************** 商家 end ******************************** */

/* ******************************** 跑马灯   begin ******************************** */
.ma-container {
  width: 100%;
  padding-left: 0px;
  padding-right: 0px;
}


.marquee_box {
  width: 100%;
  float: left;
  display: inline-block;
  overflow: hidden;
  box-sizing: border-box;
  height: 30px;
  line-height: 30px;
  position: relative;
  cursor: pointer;
  color: orange;
  background-color:#F0EFF5;
}

.marquee-list-block{
  width: 100%;
  padding-bottom: 5px;
}

.marquee-sibling {
  padding: 0;
  width: 4%;
  height: 35px;
  line-height: 35px;
  float: left;
  left: 0;
  z-index: 2000;
}

.marquee,
*[class^="marquee"] {
  display: inline-block;
  white-space: nowrap;
  /*position: absolute;*/
}

.marquee {
  margin-left: 25%;
}

/* ******************************** 跑马灯   end ******************************** */


