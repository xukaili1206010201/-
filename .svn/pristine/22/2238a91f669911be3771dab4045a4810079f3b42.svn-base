
body {
    font-family: "Microsoft Yahei" !important;
}

.fl {
    float: left;
}

.fr {
    float: right;
}

.error {
    margin-top: 80px;
    display: block;
    z-index: 1000;
    text-align: center;
}

.TagListError {
    display: block;
    z-index: 1000;
    color: #A94442;
    margin-left: 23%;
}

.content {
    margin-top: 50px;
    padding-top: 5px;
    padding-bottom: 10px;
}

.navMain {
    margin-top: 50px;
}

.selectMain {
    margin-top: 80px;
}

/*背景色为灰色*/
.BG-grey {
    background-color: #ddd;
}

/*卡头*/
.fixedTab {
    background-color: white;
    height: 35px;
    line-height: 35px;
}

.fixedTab li {
    float: left;
    font-size: 1.3rem
}

.cartHead {
    color: #7DB343;
    border-bottom: 3px solid #7DB343;
}

/*查询验证码*/
.verfication-code {
    text-align: center;
}

.verfication-code button {
    width: 45.5%;
    /*height: 35px;*/
}

.verfication-code-query {
    margin-right: 1.5%;
}

/*间隔固定底部和内容*/
.empty {
    height: 60px;
}

button, a {
    outline: none;
}

a, a:hover {
    text-decoration: none;
    color: #333
}

/*数字输入框样式*/
input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
    -webkit-appearance: none;
}

input[type="number"] {
    -moz-appearance: textfield;
}

/*城市选择下拉列表*/
.citySelect {
    font-size: 16px;
    border: none !important;
    background: url(../images/city_map.png) right no-repeat;
    width: 50px;
}

.citySelect option {
    background-color: #7DB343;
}

/*公告*/
.marquee-broadcast {
    height: 25px;
    line-height: 25px;
    color: orange;
    background-color: #F0EFF5;
    width: 100%;
    position: relative;
    z-index: 1000;
}

/*按钮的圆角*/
.btnRadius {
    font-size: 15px;
    border-radius: 4px;
}

/*底部一个按钮*/
.buttonOne {
    padding-top: 5px;
    padding-bottom: 5px;
}

.buttonOne button {
    width: 91%;
}

/*底部两个按钮*/
.buttonTwo {
    padding-top: 5px;
}

.buttonTwo button {
    width: 44%;
}

.buttonTwo button:first-child {
    margin-right: 3%;
}

/*金额的颜色*/
.moneyColor {
    color: #F7AF0D;
}

/*销价的颜色*/
.orderColor {
    color: #999;
}

/*电话样式*/
.contact-us {
    text-align: center;
    margin-bottom: 30px;
}

.callLogs {
    text-decoration: underline;
    margin-left: 5px;
}

.tellColor {
    color: #337ab7 !important;
    margin-right: 5px;
    text-decoration: underline !important;
}
