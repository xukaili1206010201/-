.followus-content{
  margin-top: 50px;
  padding-top: 5px;
  padding-bottom: 10px;
}

.wx{
  text-align: center;
  margin-top: 10px;
  margin-bottom: 20px;
  width: 100%;
}

.wxcode-block{
  width: 40%;
  margin-left: 30%;
}

.applecode-block , .androidcode-block{
  width: 80%;
  margin-left: 10%;
}

.wx p{
  font-size: 13px;
}

.qrcode-type{
  font-size: 1.3rem;
}

.app{
  overflow: hidden;
}

.app .apple , .app .android{
  width: 50%;
}

.apple{
  float: left;
}
.android{
  float:right;
}


.sharetofriends{
  margin-left: 10px;
  margin-right: 10px;
  padding-bottom: 10px;
  padding-top: 3px;
  background: white;
}


.share-block , .recommend-block{
  margin-top: 10px;
  margin-left: 10px;
  margin-right: 10px;
}

.share-block{
  height: 35px;
}

.share-block .btn{
  padding: 0px;
}

.share-block button{
  height: 100%;
}


.qrcode-type{
  margin-top:5px;
}
.recommend-block button{
  margin-top: 10px;
}



.recommend{
  margin-left: 10px;
  margin-right: 10px;
  margin-top: 10px;
  padding-top: 5px;
  padding-bottom: 10px;
  background: white;
}

.followus-share{
  z-index: 9999999;
  width: 100%;
  height: 100%;
  background: white;
  /*filter: alpha(opacity =   60);*/
  /*opacity: 0.6;*/
  position: absolute;
  top: 100%;
  display: none;
}

.followus-share-cancel{
  width: 100%;
  height: 3.5rem;
  text-align: center;
  font-size: 1.4rem;
  background: gray;
  color: white;
}

.followus-share-ui{

}


.followus-share-item{
  float: left;
  width: 25%;
  padding: 1rem 1rem;
}

.followus-share-item-img{
  width: 100%;
}

.followus-share-item-title{
  width: 100%;
  text-align: center;
  font-size: 1.3rem;
  margin-top: 1rem;
}
