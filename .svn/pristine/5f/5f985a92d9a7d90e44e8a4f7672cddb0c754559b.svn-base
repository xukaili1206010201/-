::-webkit-scrollbar{
  display: none;
}
.shopping-content{
  padding-top: 0px;
  margin-top:54px;
}

/*************************************** 卡头 begin ***************************************/
.shopping-tabs{
  width:100%;
  height:3.3rem;
  overflow-x: scroll;
  font-size:1.3rem;
  border-bottom:1px solid #ddd;
}
.shopping-segment-control {
  height: 3.3rem;
  background: white;
  overflow-x: scroll;
  display:inline-flex;
  padding-left:1rem;
}
.shopping-segment-item{
  width:6rem;
  height:3.2rem;
  line-height: 3.3rem;
  margin-right:1rem;
  text-align: center;
}
.shopping-flex{
  justify-content:space-around;
  width:100%;
}
/*************************************** 卡头 end *****************************************/


/*************************************** 外链展示 begin *****************************************/
.webView_box{
overflow:hidden;
width:100%;
height:100%;
}
.webView{
overflow:auto;
width:100%;
height:100%;
}

#tttweb{
  width: 100%;
  height: 100%;
  border: 0;
  display: block;
}
