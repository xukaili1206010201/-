
/*
小区设置中统一字体大下
*/
.community_edit_font{
  font-size: 1.5rem;
}



.myhouse-set-content{
  margin-top: 50px;
  margin-bottom: 50px;
}

.community-name-block{
  overflow: hidden;
}

.myhouse-set-cityname{
  width: 100%;
  background: url("../images/next.png") no-repeat right;
  background-size: 20px 20px;
  padding-left: 15px;
  padding-right: 10px;
}

.right-arrow{
  float: right;
}

.community-input-block{
  float: left;
  margin-right: 0px;
}


.submit-button-block{
  padding-left: 10px;
  padding-right: 10px;
}


.content{
  margin-top: 51px;
}

.current-city{
  margin-left: 10px;
  margin-right: 10px;
  padding-top: 10px;
  overflow: hidden;
  height: 3.3rem;

}

.current-city p{
  float: left;
  line-height: 3.3rem;
  height: 3.3rem;
}

.current-city img{
  float: left;
  width: 20px;
  height: 20px;
}

.text-input-block{
  margin-left: 10px;
  margin-right: 10px;
  height: 33px;
  margin-top: 20px;
}

.input-field-block , .input-field-block-community{
  overflow: hidden;
}

.text{
  float: left;
  height: 33px;
  line-height: 33px;
}


.input-field-block{
  width: 100%;
  float: left;
}


.communityset-footer{
  background: #dddddd;
  height: 49px;
}

#submit-button{
  width: 95%;
  height: 33px;
  padding: 0px;
  margin-left: 2.5%;
  margin-right: 2.5%;
  margin-top: 8px;
}

