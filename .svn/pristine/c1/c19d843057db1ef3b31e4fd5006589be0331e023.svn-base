.familyservice-content {
    margin-top: 50px;
}

.family-segment-tab {
    overflow-x: scroll;
    border-bottom: 1px solid #ddd;
    background-color: #fff;
    position: relative;
    z-index: 1000;
}

.familyservice-segementcontrol {
    overflow-x: scroll;
    height:3.3rem;
    display: -webkit-flex;    /* Chrome, WebKit */
    display: flex;
}

.tab-service {
    float: left;
    text-align: center;
}

.familyservice-segmentcontrol-item {
    display: block;
    font-size: 1.3rem;
    /*height: 2.5rem;*/
    background-image: url(../images/type-default.png);
    background-repeat: no-repeat;
    background-size: 7rem 2.5rem;
    line-height: 2.4rem;
    width: 7rem;
}

.tab-change-control .tab-service {
    margin: 5px 0px 5px 5px !important;
}

.tab-change-control .tab-service:first-child {
    margin-left: 10px !important;
}

.tab-change-control .tab-service:last-child {
    margin-right: 10px !important;
}

.familyservice-active {
    color: #ffffff;
}

.breakfast-active {
    background-image: url(../images/type-active.png);
    background-repeat: no-repeat;
    background-size: 7rem 2.5rem;
}

.familyservice-table {
    clear: both;
}

.familyservice-row {
    border-bottom: 1px solid #dddddd;
    padding: 10px;
    overflow: hidden;
}

.familyservice-row-left {
    float: left;
    position: relative;
}

.familyservice-row-left .familyservice-sellerlogo {
    width: 4rem;
    height: 4rem;
}

.familyservice-row-right {
    padding-left: 10px;
    overflow: hidden;
}

.familyservice-row-right p {
    margin: 0;
}

.familyservice-seller-name {
    color: #515151;
    font-size: 16px !important;
}

.familyservice-tag {
    width: 32px;
    height: 16px;
    margin-bottom: 4px;
    display: inline-block;
}

.familyservice-goods-num {
    float: right;
}

.familyservice-seller-intro, .familyservice-seller-service {
    color: #999999;
    font-size: 13px;
}

.hiddenH {
    height: 2px;
}

.tipImg {
    width: 100%;
    height: 120px;
}

/*********无相关数据样式******************/
.errMsg {
    text-align: center;
    font-size: 1.3rem;
}

.errTop {
    margin-top: 50px;
}

