a,input,img,textarea,span,div{outline: 0;-webkit-tap-highlight-color:rgba(255,0,0,0);}
header{
    width:100%;
    height: 45px;
    background: #ececea;
    border-bottom: 1px solid #ddd;
}
header.fixed{
    position: fixed;
    left: 0;
    top: 0;
    z-index: 99;
}
.header{
    margin:0 20px;
    text-align: center;
    color: #4e4a49;
    font-size: 1em;
    height: 45px;
    line-height: 45px;
    position: relative;
}

.sort_box{
    /*margin-top: 51px;*/
    width: 100%;
    /*padding-top: 51px;*/
    overflow: hidden;
}
.sort_list{
    padding:0px 10px 0px 10px;
    position: relative;
    /*height: 55px;*/
    /*line-height: 65px;*/
    /*border-bottom:1px solid #ddd;*/
}


.sort_list .num_name{
    height: 3rem;
    /*margin-top: 5px;*/
    color: #000;
    /*background: red;*/
    border-bottom: 1px solid #ddd;
  font-size: 1.4rem;
  line-height: 3rem;
}

.selectcity-hotcity{
  height: 3rem;
  line-height: 3rem;
  font-size: 1.4rem;
}

.status{
    height: 20px;
    margin-top: 5px;
    font-size: 12px;
    /*background: green;*/
}

.sort_letter{
    height: 3rem;
    line-height: 3rem;
    padding-left: 10px;
    color:#787878;
    font-size: 14px;
    background: #ddd;
    /*border-bottom:1px solid #ddd;*/
}
.initials{
    position: fixed;
    top: 47px;
    right: 0px;
    height: 100%;
    width: 15px;
    padding-right: 10px;
    text-align: center;
    font-size: 12px;
    z-index: 99;
    background: rgba(145,145,145,0);
}
.initials li img{
    width: 14px;
}







