
.activityInfoList {
    padding: .5rem 1rem;
    font-size: 1.2rem;
}

.action-item {
    border-bottom: 3px solid #7DB343;
    font-size: 1.2rem;
    margin: .5rem 1rem .5rem 1rem;
    color: #7DB343;
}

.active-list {
    margin: .5rem;
    padding: .5rem;
    font-size: 1rem;
}

.active-list p:first-child {
    font-size: 1.2rem;
    font-weight: bold;
    color: #7DB343;
}

.activityInfoList p:first-child {
    font-size: 1.4rem;
    font-weight: bolder;
    letter-spacing: .1rem;
    border-bottom: 3px solid #7DB343;
    color: #7DB343;
}

.activityDetail .action-time {
    float: right;
    margin-right: 1rem;
}

.activityDetail .detail {
    padding: 10px 15px;
}

.activityDetail .action-attached {
    font-size: 1.2rem;
    padding: 1rem;
    padding-top: .5rem;
    margin-bottom: 50px;
}

.action-enter {
    padding: 1rem;
    background: #F1EFF5;
    text-align: center;
}

.action-enter .btn {
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border-radius: 5px;;
    color: #ffffff;
    width: 80%;
    background-color: #7DB343;
}
