.content{
  margin-top: 51px;
}

/* ******************************** navigationbar with back-button   begin ******************************** */


/* ******************************** 返回按钮样式 ******************************** */

.left-item{
  float: left;
  height: 50px;
  display: table;
}

/* ******************************** navigationbar item样式 ******************************** */
.stationintro-item{
  padding-left: 10px;
  margin-top: 10px;
  margin-right: 10px;
  height: 30px;
  margin-left:10px;
  overflow: hidden;
}



.stationintro-item .search-button{
  float: right;
}

.stationintro-item .search-button img{
  width: 30px;
  height: 30px;
}


.stationintro-item .search-field-block{
  margin-left: 10px;
  /*margin-right: 35px;*/
  height: 100%;
}


.form-control{
  height: 30px;
}

/* ******************************** navigationbar with back-button   end ******************************** */

.segment-control{
  background: #dddddd;
}

.segment-control .segment-item{
  margin-left: 1%;
  margin-top: 5px;
  margin-bottom: 5px;
  width: 48.5%;
  color: black;
  float: left;
}

.segment-control .btn{
  padding: 0px;
}

.station-list,.searchStation{
  margin-top: 85px;
}

.station-map{
  margin-top: 85px;
}

.segment-control .stationintro-map{
  color: white;
  background: rgb(164, 214, 40);
}

.segment-control .stationintro-list{
  background: white;
}

.station-list .sort_box .sort_list .num_name{
  margin-top: 0;
  font-size: 16px;
  border-bottom: none;
}

.address{
  border-top: none;
  border-bottom: 1px solid #dddddd;
}

.stationintro-item{
  display:none;
}
.stationintro-title{
  width: 70%;
  height: 50px;
  line-height: 50px;
  font-size: 14px;

}
.station-list{
  display: none;
}
.initials{
  margin-top:15px;
}

#allmap {width: 100%;height: 100%;overflow: hidden;margin:0;font-family:"微软雅黑";}
