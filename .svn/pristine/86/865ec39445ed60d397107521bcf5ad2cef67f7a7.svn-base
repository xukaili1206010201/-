      var tableTopH = parseInt($(".table-top-fixd").css("height"));
      var marginTop = navigationbarH + tableTopH;
      $(".paotui-table").css({
        'margin-top':marginTop+'px'
      });
      $(".daigou-table").css({
        'margin-top':marginTop+'px'
      });
    });
    //************************************* 计算列表顶部的高度以给列表设置位置 end **************************************


    //************************************* 卡头切换 begin **************************************
    var lastSelectButton = '.paotui-button';
    var  lastShowTable = '.paotui-table';
    var currentShowTable;
    function setButtonAndShowOrHiddenTable(target){
      $(lastSelectButton).css({
        'background':'rgb(235, 235, 241)',
        'color':'black'
      });
      $(target).css({
        'background':'rgb(161, 216, 34)',
        'color':'white'
      });
      lastSelectButton = target;

      $(lastShowTable).css({
        'display':'none'
      });
      $(currentShowTable).css({
        'display':'block'
      });
      lastShowTable = currentShowTable;

    }

    function showPaotuiTable(event){
      currentShowTable = '.paotui-table';
      setButtonAndShowOrHiddenTable(event.target);
    }

    function showDaigouTable(event){
      currentShowTable = '.daigou-table';
      setButtonAndShowOrHiddenTable(event.target);
    }
    //************************************* 卡头切换 end ****************************************

