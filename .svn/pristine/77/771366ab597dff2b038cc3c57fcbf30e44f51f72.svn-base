/******************** 按钮组 *******************/
.footer{
  width: 100%;
  height: 49px;
  background: rgb(240, 239, 245)
}

.fa-block , .cancel-block{
  width: 100%;
  margin-top: 10px;
  padding-left: 10px;
  padding-right: 5px;
  float: left;
}

.btn{
  padding: 8px;
}

.footer .send-button , .cancel-button{
  width: 100%;
  height: 29px;
  color: white;
}
.goodsName{
  font-size: 14px;
}
.time{
  float: right;
}
/*滑动按钮*/
.btnDelete{
  position: absolute;
  top: 0;
  right: -82px;
  text-align: center;
  /*background: red;*/
  color: #fff;
  width: 80px;
  height:100%;
  padding: 0;
}
.payout,.nopayout{
  float:left;
  width:80px;
  height:130px;
  line-height: 130px;
  text-align: center;
}
.deli-footer{
  background-color:#ddd;
  padding-bottom: 5px;
}
.deli-footer .fa-block{
  padding-left:1rem;
}
.deli-footer .fa-block button,.deli-footer .cancel-block button{
  width:100%;
}
.delivery-media .spanCheck img{
  width:2rem;
  height:2rem;
}
.delivery-img .good-img img{
  width:5rem;
  height:5rem;
}
