    $scope.getGovermentInfo = function () {
      guanjiaService.listGovernmentInfo({
        city_id: sessionStorage.gpscityId
      }).success(function (response) {
        if (response.code == '0') {
          $scope.governmentUrl = $sce.trustAsResourceUrl(response.data.url);
