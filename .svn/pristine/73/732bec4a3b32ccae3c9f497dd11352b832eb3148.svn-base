          //轮播图请求到数据1秒后显示
          setTimeout(function () {
            $scope.imgShow = false;
          }, 1000);
        }
      });
    }


    /**
     *  获取公告数据
     */
    function getNotice() {
      var noticeParams = {
        type: 'system,city',
        city_id: sessionStorage.gpscityId,
        label: $scope.label
      };
      guanjiaService.getNotice(noticeParams).then(function (data) {
        if (data != null && data.length > 0) {
          var marqueeContent = '';
          for (var i = 0; i < data.length; i++) {
            marqueeContent += '<li>' + data[i].content + '<li>';
