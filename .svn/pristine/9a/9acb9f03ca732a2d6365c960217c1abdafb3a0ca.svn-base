
/* ******************************** 列表 样式 ******************************** */
/**卡头 **/
.btn:focus,
.btn:active:focus,
.btn.active:focus,
.btn.focus,
.btn:active.focus,
.btn.active.focus {
  outline: none;
}

.cartContent .cart-body{
  margin-bottom: 50px;
}
.cart-tab .btn-tab {
  color: #333;
  background: #ffffff;
}
.cart-tab .selected{
  color: #7DB343;
  background-color:rgba(251, 251, 251,1);
  border-bottom:3px solid #7DB343;
}
.cart-tab .btn-tab:focus,
.cart-tab .btn-tab.focus {
  color: #7DB343;
}

.cart-tab{
  margin-top:50px;
  overflow: hidden;
  border-bottom: 1px solid #ddd;
  background-color:#fff;
}
.cart-tab .btn-tab{
  width:50%;
  float:left;
}

/**卡头 **/

.cart-tabbar{
  background: green;
}

.cart-list-group-item{
  height: 115px;
  /*padding-top: 0px;*/
  padding-left: 5px;
  padding-right: 5px;

  overflow: hidden;
}

.cart-product-pic{
  float: left;
}
.showGoods{
  width:100%;
}

.cart-product-pic img{
  margin-top: 0px;
  width: 4rem;
  height: 4rem;
}
.cart-small-pic {
  margin-left: -7.5px;
  float: left;
}
.list-group-item .order-table{
  margin-left:20px;
}
.list-group-item .order-table .cart-row{

}
.cart-table{
  margin-bottom: 0px;
}
.cart-small-pic img{
  width: 20px;
  height: 20px;
}


/*start */
.cart-small-pic .btn{
  width:35px;
  height:35px;
  clear: both;
  -webkit-border-radius: 20px;
  -moz-border-radius: 20px;
  border-radius: 20px;;
}
