/*间隔固定底部和内容*/
.empty{
  height:60px;
}
button,a{ outline: none;}
a,a:hover{ text-decoration:none; color:#333}

/*数字输入框样式*/
input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
  -webkit-appearance: none;
}
input[type="number"]{
  -moz-appearance: textfield;
}
