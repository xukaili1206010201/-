<script>
  var communityHeight = $(window).height() - $('.navigationbar').height();
  $('.commmunity-table').css({
    'height' : communityHeight + 'px',
    'overflow' : 'scroll'
  });
  $('.searchCommunity').css({
    'height' : communityHeight + 'px',
    'overflow' : 'scroll'
  });
</script>
