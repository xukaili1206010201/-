.familyservice-content{
  margin-top: 50px;
}

.familyservice-segementcontrol {
  width: 100%;
  height: 40px;
  padding:5px 0px;
  overflow-x: scroll;
  display: inline-flex;
  padding:0 2rem;
}
.tab-service{
  float: left;
  margin-right:5rem;
  height:40px;
  line-height:40px;
  text-align: center;
}
.familyservice-segmentcontrol-item {
  display:block;
  font-size: 1.3rem;
}
.tab-service > a:hover, .tab-service > a:active, .tab-service > a:focus {
  color: rgb(125, 179, 67);
}

.familyservice-active {
  /*background: #7DB343;*/
  color: #7DB343;
}

.familyservice-table{
  clear:both;
  margin-top:2rem;
}

.familyservice-row {
  border-bottom: 1px solid #dddddd;
  padding: 10px;
}

.familyservice-row-left {
  width: 60px;
  height: 60px;
  float: left;
  position:relative;
}

.familyservice-row-right {
  padding-left: 10px;
  overflow: hidden;
}

.familyservice-row-right p {
  margin: 0;
}

.familyservice-seller-name {
  color: #515151;
  font-weight: bold;
  font-size: 17px;
}
.familyservice-tag{
  width: 32px;
  height: 16px;
  margin-bottom: 4px;
  display: inline-block;
}

.familyservice-goods-num {
  float: right;
}

.familyservice-seller-intro , .familyservice-seller-service{
  color: #999999;
  font-size: 13px;
}

.hiddenH{
  height:2px;
}


.tipImg{
  width:100%;
  height:120px;
}

