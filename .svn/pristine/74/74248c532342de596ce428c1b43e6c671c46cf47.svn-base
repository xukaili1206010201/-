.publicservice-nav{
  margin-bottom: 0;
}

.publicservice-segmentcontrol{
  width: 100%;
  height: 40px;
}

.publicservice-segmentcontrol .publicservice-sc-item{
  float: left;
  background: #ddd;
  width: 30%;
  height: 30px;
  margin-top: 5px;
  margin-left: 2.5%;
  padding: 0;
  outline: none;
  border-radius: 3px;
}

.publicservice-segmentcontrol .publicservice-sc-item:focus{
  outline: none;
}

.publicservice-segmentcontrol .publicservice-default-selected-item{
  background: #7DB343;
  color: white;
}


.publicservice-street-table , .publicservice-manager-table{
  display: none;
}

.publicservice-street-row p{
  margin: 0;
}

.publicservice-street-phone{
  float: right;
}

/* 社区街道的地址以及电话 */
.publicservice-street-address , .publicservice-street-phone{
  font-size: 12px;
}

.publicservice-manager-row p{
  margin: 0;
}

.publicservice-manager-phone{
  float: right;
}

/* 小区名、小区地址、物业电话 */
.publicservice-manager-communityname , .publicservice-manager-address , .publicservice-manager-phone{
  font-size: 12px;
}

/*导航栏样式*/
.navigationbar-publicservice{
  margin-left: 10px !important;
  margin-top: 10.5px;
  margin-right: 10px !important;
  height: 30px;
  overflow: hidden;
  display: none;
}
.navigationbar-publicservice .search-button img {
  width: 25px;
  height: 25px;
}
.navigationbar-government{
  width: 80%;
  height: 50px;
  line-height: 50px;
  font-size: 14px;
}

.publicservice-government-table .goverment{
  width:100%;
  border:0;
}
