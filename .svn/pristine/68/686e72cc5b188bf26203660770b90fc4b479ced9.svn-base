.familyservice-content{
  margin-top: 50px;
}

.familyservice-segementcontrol {
  width: 100%;
  height: 40px;
  padding:5px 0px;
}
.tab-service{
  float: left;
}
.familyservice-segmentcontrol-item {
  /*width: 15%;*/
  height: 30px;
  /*margin-top: 5px;*/
  /*float: left;*/
  /*background: #ddd;*/
  color: black;
  font-size: 12px;
  padding: 0 2px !important;
  /*margin-left: 1.4%;*/
  outline: none;
  border-radius: 5px;
  background-color: #E7E7E7;
  /*margin-right:3px;*/
}

.familyservice-active {
  background: #7DB343;
  color: white;
}

.familyservice-table{
  clear:both;
}

.familyservice-row {
  border-bottom: 1px solid #dddddd;
  padding: 10px;
}

.familyservice-row-left {
  width: 60px;
  height: 60px;
  float: left;
  position:relative;
}

.familyservice-row-right {
  padding-left: 10px;
  overflow: hidden;
}

.familyservice-row-right p {
  margin: 0;
}

.familyservice-seller-name {
  color: #515151;
  font-weight: bold;
  font-size: 17px;
}
.familyservice-tag{
  width: 32px;
  height: 16px;
  margin-bottom: 4px;
  display: inline-block;
}

.familyservice-goods-num {
  float: right;
}

.familyservice-seller-intro , .familyservice-seller-service{
  color: #999999;
  font-size: 13px;
}

.hiddenH{
  height:2px;
}


.tipImg{
  width:100%;
  height:120px;
}

