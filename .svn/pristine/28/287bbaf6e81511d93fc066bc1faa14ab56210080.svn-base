/****************部落信息*************************/
.tribe-content .tie-count{
  position:absolute;
  /*right: 0px;*/
  bottom:0px;
}
.tribe-content .list-group-item{
  border-radius: 0px;
}
/***************帖子列表*****************************/
.tribe-content .third-p span:first-child{
  float: left;
}
.tribe-content .third-p span:last-child{
  float: right;
}
.tribe-content .first-p b{
  float:left;
}
.tribe-content .first-p span{
  float:right;
}
.tribe-content .second-p{
  clear:both;
}
/**************发表帖子*********************/
.tribe-content .express-tie{
  background-color: #ddd;
  padding:5px 10px;
  position:fixed;
  bottom: 0;
  left:0;
  width:100%;
}
.tribe-content .express-tie .btn{
  width:100%;
  border-radius: 4px;
}

