
/* ******************************** 包含返回按钮的导航栏样式 ******************************** */
/******* 导航栏 **********/
.navigationbar {
  width:100%;
  height:50px;
  line-height: 50px;
  vertical-align: middle;
  background-color: #7DB343;
  color: white;
  font-size: 1.4rem;
}

/**********************返回+搜索/内容*****************/
.navLeft{
  /*width:10%;*/
  float: left;
  margin-top: 1.3rem;
}
.navRight{
  width:90%;
  float: right;
  padding:10px 10px 0px 10px;
}
.navText{
  width:90%;
  float: right;
  padding-left: 32%;
}

/*********************返回+城市+搜索/内容*************/

.navcityLeft{
  /*width:30%;*/
  float: left;
  margin-top: 1.3rem;
}
.navcityRight{
  width:68%;
  float: right;
  padding:10px 10px 0px 0px;
}
.navcityText{
  width:68%;
  float: right;
  padding-left:12%;
}


/*返回*/
.back-button {
  width: 1rem;
  height: 1.5rem;
  margin-left: 10px;
  float: left;
}
/**** 搜索框 ****/
.search-group {
  height: 30px;
}
/* 输入框 */
.search-group .search-input {
  float: left;
  width:82%;
  margin-right: 2px;
}
/* 搜索按钮 */
.search-group .search-button {
  width:25px;
  height: 25px;
  margin-right: 0px;
  float: right;
}
/* 城市 */
.city{
  float: left;
  height: 30px;
  line-height: 30px;
  margin-left: 10px;
  margin-top: -5px;
}

/*********************有添加按钮*************/
.navAddRight{
  width:80%;
  float: left;
  padding:10px 10px 0px 20px;
}
.navCityAddRight{
  width:56%;
  float: left;
  padding:10px 0px 0px 0px;
}
/* 添加按钮样式  */
.add-image{
  width: 27px;
  height: 27px;
  margin-top: 10px;
  margin-right: 3%;
  float: right;
}

/* ******************************** 灰色的背景 ******************************** */
.gray-body{
  background: #F0EFF5;
}


/* ******************************** 字体大小 ******************************** */
@media only screen and (max-device-width: 1080px), only screen and (max-width: 1080px) {
  html, body {
    font-size: 33.75px
  }
}

@media only screen and (max-device-width: 960px), only screen and (max-width: 960px) {
  html, body {
    font-size: 30px
  }
}

@media only screen and (max-device-width: 750px), only screen and (max-width: 750px) {
  html, body {
    font-size: 23.4375px
  }
}

@media only screen and (max-device-width: 720px), only screen and (max-width: 720px) {
  html, body {
    font-size: 22.5px
  }
}

@media only screen and (max-device-width: 640px), only screen and (max-width: 640px) {
  html, body {
    font-size: 20px
  }
}

@media only screen and (max-device-width: 540px), only screen and (max-width: 540px) {
  html, body {
    font-size: 16.875px
  }
}

@media only screen and (max-device-width: 480px), only screen and (max-width: 480px) {
  html, body {
    font-size: 13px
  }
  .navCityAddRight{
    width:63%;!important;
  }
  .navAddRight{
    width:84%;!important;
  }
  .search-group .search-input{
    width:86%;!important;
  }
}

@media only screen and (max-width: 400px) {
  html, body {
    font-size: 12.5px
  }
  .navCityAddRight{
    width:60%;!important;
  }
  .navAddRight{
    width:83%;!important;
  }
  .search-group .search-input{
    width:85%;!important;
  }
}

@media only screen and (max-width: 360px), only screen and (max-width: 320px) {
  html, body {
    font-size: 11.25px
  }
  .navCityAddRight{
    width:56%;!important;
  }
  .navAddRight{
    width:80%;!important;
  }
  .search-group .search-input{
    width:82%;!important;
  }
}

@media only screen and (max-width: 320px), only screen and (max-device-width: 320px) {
  html, body {
    font-size: 10px
  }
}
