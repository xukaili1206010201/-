.goodslist-content{
  background:#F0EFF5;
}
/* ******************************** 商家 begin ******************************** */
.seller-name-block {
  margin-top: 0px;
  background: white;
  width: 100%;
  height: 40px;
  overflow: hidden;
}

.seller-name-block img {
  float: right;
  width: 20px;
  height: 20px;
  margin-top: 10px;
  margin-right: 10px;
}

.seller-name-block p {
  float: left;
  height: 40px;
  line-height: 40px;
  font-size: 14px;
  margin: 0px;
  margin-left: 10px;
  width: 85%;

  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

/* ******************************** 商家 end ******************************** */

/* ******************************** 跑马灯   begin ******************************** */
.ma-container {
  width: 100%;
  padding-left: 0px;
  padding-right: 0px;
}


.marquee_box {
  width: 100%;
  float: left;
  display: inline-block;
  overflow: hidden;
  box-sizing: border-box;
  height: 30px;
  line-height: 30px;
  position: relative;
  cursor: pointer;
  color: orange;
  background-color:#F0EFF5;
}

.marquee-list-block{
  width: 100%;
  padding-bottom: 5px;
}

.marquee-sibling {
  padding: 0;
  width: 4%;
  height: 35px;
  line-height: 35px;
  float: left;
  left: 0;
  z-index: 2000;
}

.marquee,
*[class^="marquee"] {
  display: inline-block;
  white-space: nowrap;
  /*position: absolute;*/
}

.marquee {
  margin-left: 25%;
}

/* ******************************** 跑马灯   end ******************************** */


/* ******************************** 下拉选择列表   begin ******************************** */

.filter-block .goodsListSelect{
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  border-radius: 5px;;
  width: 96%;
  height:26px;
  margin:0 5px 2%;
  padding-left:3%;
  background: url(../images/drop_down.png) no-repeat right #FFFFFF;
}
/* ******************************** 下拉选择列表   end ******************************** */



/* ******************************** 卡头   begin ******************************** */
.goods-segment-control{
  background:white;
  height:2.8rem;
  overflow-x: scroll;
  width:100%;
}
.goods-list-tabs{
  height: 2.8rem;
  font-size: 13px;
  overflow-x: scroll;
  display: inline-flex;
  padding-left:1rem;
  color: #000;
}
.goods-list-tabs .classify{
  height: 2.8rem;
  float: left;
  border: none;
  text-align: center;
  line-height:2.8rem;
  background: #FFFFFF;
  width:4.5rem;
  margin-right:1rem;
}

.goods-list-tabs a:hover{
  text-decoration: none;
}

