.pay-content {
  margin-top: 45px;
  padding-left: 0px !important;
  padding-right: 0px !important;
  padding-top: 2px !important;
}

/*********************************************订单列表样式 begin*********************************************/
.order-table .list-group {
  margin-bottom: 0px;
}
.pay-order-row{
  /*padding: 0px;*/
  margin-bottom: 10px;
  border: none;
}

.pay-row .section-header .section-header-content {
  margin-top: 5px;
  margin-left: 10px;
  margin-bottom: 5px;
}

/* 订单信息字体 */
.pay-row
.section-header
.section-header-content span {
  font-size: 15px;
}

.pay-order-no{
  font-size: 1.3rem;
}

/* 订单金额 */
.order-price {
  /*margin-right: 10px;*/
  font-size: 16px;
  float: right;
  color: #F7AF0D;
}


/* 订单时间 */
.pay-row
.section-header
.section-header-content
.order-time {
  margin: 0px;
  margin-top: 5px;
  font-size: 13px;
}

.pay-row .media-list .pay-type-content {
  margin-left: 5px;
  margin-top: 0px;
  padding-bottom: 10px;
  padding-top: 10px;
  border-top: 1px solid #dddddd;
}

.pay-row .media-list .pay-type-content .pay-type-content-left {
  padding-right: 5px;
  padding-bottom: 0px;
  margin-bottom: 0px;
}

.pay-row .media-list .pay-type-content .pay-type-content-left .pay-type-content-left-image {
  width: 60px;
  height: 60px;
}

/************************** 商品名称、商品价格  ************************/
.pay-row .media-list .pay-type-content .media-body .pay-name-price {
  overflow: hidden;
  margin-right: 10px;
}
.pay-goods-image{
  width: 4rem;
  height: 4rem;
  margin-bottom: 10px;
}

.pay-name-price {
  margin-top: 10px;
  margin-bottom: 5px;
}

.pay-goods-name{
  display: inline-block;
  width: 75%;
  font-size: 1.4rem;
}

.pay-goods-pricecount{
  float: right;
  width: 23%;
}


.pay-goods-price {
  font-size: 1.5rem;
  color: #F7AF0D;
  text-align: right;
}

.pay-goods-num{
  text-align: right;
  color: #F7AF0D;
}



.pay-goods-specifications{
  float: left;
}

.pay-spec-coupons{
  overflow: hidden;
}


