/*********************************************订单列表样式 end*********************************************/

/*********************************************总额、留言输入框 begin*********************************************/
.total-price-block {
  background: white;
}

.total-price-block .total-price {
  overflow: hidden;
  margin-left: 10px;
  margin-right: 10px;
}

.total-price-block .total-price span {
  font-size: 16px;
  height: 3.5rem;
  line-height: 3.5rem;
}

.total-price-block .total-price .total-price-int {
  float: right;
  color: #F7AF0D;
}

/*********************************************总额、留言输入框 end*********************************************/

/*********************************************优惠券列表 begin*********************************************/
.coupons-table {
  width: 100%;
  background: white;
  margin-top: 10px;
  /*padding-left: 10px;*/
  /*padding-top: 5px;*/
  /*padding-right: 10px;*/
  padding-bottom: 5px;
}

.coupons-table .coupons-table-row{
  padding: 5px;
}

.coupons-table .coupons-text {
  margin: 0px;
  font-size: 16px;
  /*background: red;*/
  line-height: 30px;
  padding-bottom: 3px;
  border-bottom: 1px solid #dddddd;
}

/* 优惠券信息 */
.pay-row-content{
  padding-left: 10px;
  overflow: hidden;
}

/* 优惠券信息-名称、类型、价值、数量 */
.pay-coupons-info{
  height: 2rem;
  line-height: 2rem;
}

/* 减少优惠券按钮 */
.numbermodify-minus{
  width: 2rem;
  height: 2rem;
  border: 1px solid #dddddd;
}

/* 优惠券数量 */
.numbermodify-number{
  width: 2rem;
  height: 2rem;
  border: 1px solid #dddddd;
  text-align: center;
}

/* 增加优惠券按钮 */
.numbermodify-add{
  width: 2rem;
  height: 2rem;
  border: 1px solid #dddddd;
}


.coupons-table .list-group {
  margin-bottom: 5px;
}

.coupons-table .list-group .list-group-item {
  border-left: none;
  border-right: none;
  border-top: none;
  border-radius: 0px;
  padding-top: 5px;
  padding-bottom: 5px;
  margin-top: 0px;
  margin-bottom: 0px;
  overflow: hidden;
}

.coupons-table .list-group .list-group-item span{
  float: left;
  height: 25px;
  line-height: 25px;
}

.coupons-table .list-group .list-group-item .coupons-num-block{
  float: right;
}

