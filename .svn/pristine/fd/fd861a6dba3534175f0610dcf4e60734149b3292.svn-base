.main {
  background-color: #EDEDED;
  height: 100%;
  margin:0px;
  padding:0px;
}
/*----------------------------------------*/
.row {
    margin-right: 0px;
    margin-left: 0px;
}
/*----------------------------------------*/
.loading-label:before {
    content:'加载中';
    font-size:1.6rem;
    color:rgba(51, 51, 51, 1);
}
.loading-label{
    width: 100%;
    text-align: center;
    display: inline-block;
    counter-increment: loading-label;
    position: absolute;
    top: -2.5rem
}
.table {
    display: table;
}
.table > li {
    display: table-row;
}
.table > li > div {
    display: table-cell;
}
/*----------------------------------------*/


/*----------------------------------------*/
.float-left{float: left}
.float-right{float: right}

.no-padding-left-right{padding-left: 0px;padding-right: 0px}
.no-padding-right{padding-right: 0px}
.no-padding-left{padding-left: 0px;}
.no-padding-top-bottom{padding-top: 0px;padding-bottom: 0px}

.padding-side-5{padding: 0px 5px;}
.padding-side-10{padding: 0px 10px;}
.padding-side-15{padding: 0px 10px;}

.padding-top-15{padding-top: 15px;}
.margin-top-15{margin-top: 15px}
.padding-top-10{padding-top: 10px;}
.margin-top-10{margin-top: 10px}

.border-all {border: 1px solid #CCC;}
.border-side {border-right: 1px solid #CCC;border-left: 1px solid #CCC;}
.border-top {border-top: 1px solid #CCC;}
.border-bottom {border-bottom: 1px solid #CCC;}

.border-radius-top{border-radius: 5px 5px 0px 0px}
.border-radius-bottom{border-radius: 0px 0px 5px 5px}
