::-webkit-scrollbar{
  display: none;
}
.shopping-content{
  padding-top: 0px;
  margin-top:50px;
}

/*************************************** 卡头 begin ***************************************/
.shopping-tabs{
  height:3.3rem;
  font-size:1.3rem;
  border-bottom:1px solid #ddd;
}
.shopping-segment-control {
  height: 3.3rem;
  background: white;
  overflow-x: scroll;
  overflow-y: hidden;
  white-space: nowrap;
}
.shopping-segment-item{
  height:3.2rem;
  line-height: 3.3rem;
  margin-right:1rem;
  text-align: center;
  padding-left:1.2rem;
  padding-right:1.2rem;
  display: inline-block;
}
.shopping-flex{
  justify-content:space-around;
  width:100%;
}
/*************************************** 卡头 end *****************************************/


/*************************************** 外链展示 begin *****************************************/
.webView_box{
  overflow:hidden;
  width:100%;
  position: relative;
}
.webView{
  overflow:auto;
  width:100%;
  height:100%;
  position: relative;
}

#tttweb{
  width: 100%;
  height: 100%;
  border: 0;
  display: block;
  position: relative;
}
