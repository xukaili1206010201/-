.message-image{
  width: 100%;
  text-align: center;
}

.message-image img{
  width: 100px;
  height: 100px;
}

.message-detail-block{
  background: rgb(235,235,241);
  margin-top: 5px;
  margin-bottom: 5px;
  padding-left: 10px;
  padding-right: 10px;
  padding-top: 5px;
  padding-bottom: 5px;

  overflow: hidden;
}

.message-detail-block .message-detail{
  float: left;
  margin: 0px;
}

.message-detail-block .link{
  color: #0088cc;
  text-align: right;
  margin-bottom: 0px;
  /*padding-top: 10px;*/
}
.read-time{
  float:right;
  margin-right: 10px;
}
