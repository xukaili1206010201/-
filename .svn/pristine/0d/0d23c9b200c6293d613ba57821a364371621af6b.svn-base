/* ******************************** 内容样式 ******************************** */
.message-detail-content{
  margin-top: 51px;
}

.message-title{
  font-size: 17px;
  padding-left: 10px;
}

.sender-info{
  height:20px;
  line-height: 20px;;
  overflow: hidden;
  margin-left: 10px;
  margin-right: 10px;
  margin-top: 10px;
}

.sender-info p{
  font-size: 13px;
}

.sender-info .city{
  float: left;
}

.sender-info .sender-time{
  float: right;
}



