
.business-detail-content .panel{
  border: none;
  border-radius: 0;
}

.seller-img{
  width: 64px;
  height: 64px;
}
.img-distance{
  margin-left:5px;
  margin-top:3px;
}
.setFont{
  font-size:1.2rem;
}

.business-detail-content .basic-head{
  /*padding:10px 15px 10px 0px;*/
  background-color:#fff;
}
.business-detail-content .basic-head{
  overflow: hidden;
}
.business-detail .business-up{
  overflow:hidden;
}
.business-detail-content .basic-left{
  float:left;
  width:25%;
  /*border:1px solid red;*/
}
.business-detail-content .basic-left .logo-img{
  width:100%;
}
.business-detail-content .basic-right{
  float:left;
  width:75%;
  padding:0px 1rem;
}
.business-detail-content .basic-right h3{
  margin:0;
  float:left;
}
.business-detail-content .basic-right div span{
  float:right;
}
.business-detail-content .basic-right p{
  clear:both;
}
.business-detail-content .basic-pics{
  clear: both;
}
.business-detail-content .intro{
  clear:both;
  padding-top:1rem;
}
