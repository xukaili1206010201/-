.societyTribeNav {
  width:100%;
  height:50px;
  line-height: 50px;
  vertical-align: middle;
  background-color: #7DB343;
  color: white;
  font-size: 1.4rem;
}
.societyTribeNavLeft{
  width:32%;
  float: left;
  margin-top: 1.3rem;
}
.societyTribeNavMiddle{
  width:44%;
  float: left;
  margin-top: 10px;
}
.societyTribeNavMiddle .societyTribesearch-input{
  display: block;
  width: 100%;
  height: 30px;
  padding: 6px 12px;
  font-size: 14px;
  line-height: 1.42857143;
  color: #555;
  background-color: #fff;
  background-image: none;
  border: 1px solid #ccc;
  border-radius: 4px;
}
.societyTribeNavRight{
  float: right;
  width:65px;
  margin:10px 5px 0px 5px;
}
.societyTribeNavRight .societyTribesearch-button{
  width:25px;
  height: 25px;
  /*margin-right: 0px;*/
  float: left;
}
.societyTribeNavRight .societyTribeseadd-image{
  width: 27px;
  height: 27px;
  margin-right: 3%;
  float: right;
}
