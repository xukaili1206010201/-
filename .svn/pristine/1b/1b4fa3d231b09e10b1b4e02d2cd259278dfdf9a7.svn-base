.message-city{
  float:right;
  margin-right:5px;
}

.message-time{
  float:right;
  margin-right:5px;
}
.msg-font{
  font-size:1.1rem;
}
.msg-sender{
  float:left;
}
.msg-left{
  margin-left:10px;
}
